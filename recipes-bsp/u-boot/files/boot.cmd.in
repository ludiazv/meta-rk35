# DO NOT EDIT THIS FILE
#
# Please edit /boot/@@RK35_BOOT_ENV@@.txt to set supported parameters
#

setenv load_addr "0x9000000"
setenv ov_error "n"
# default values
setenv rootdev "/dev/mmcblk${devnum}p2"
setenv console "serial"
setenv rootfstype "ext4"

echo "[RK35] Boot script loaded from ${devtype} ${devnum}"

if test -e ${devtype} ${devnum} @@RK35_BOOT_ENV@@.txt ; then
	load ${devtype} ${devnum} ${load_addr} @@RK35_BOOT_ENV@@.txt
	env import -t ${load_addr} ${filesize}
fi
if test "${console}" = "display" || test "${console}" = "both"; then setenv consoleargs "console=tty1"; fi
if test "${console}" = "serial" || test "${console}" = "both"; then setenv consoleargs  "console=ttyS2,1500000n8 ${consoleargs}"; fi

# get PARTUUID of first partition on SD/eMMC the boot script was loaded from
if test "${devtype}" = "mmc"; then part uuid mmc ${devnum}:1 partuuid; fi

setenv bootargs "root=${rootdev} rootwait rootfstype=${rootfstype} ${consoleargs} consoleblank=0 loglevel=${verbosity} ubootpart=${partuuid} ${extraargs}"

echo "[RK35] Loading kernel Image..."
load ${devtype} ${devnum} ${kernel_addr_r} Image

echo "[RK35] Loading dtb ${fdtfile}..."
load ${devtype} ${devnum} ${fdt_addr_r} ${fdtfile}
fdt addr ${fdt_addr_r}
fdt resize 65536
for overlay_file in ${overlays}; do
	if load ${devtype} ${devnum} ${load_addr} /dbto/${overlay_file}.dtbo; then
		echo "[RK35] Applying DT overlay /boot/dbto/${overlay_file}.dtbo"
		fdt apply ${load_addr} || setenv ov_error "y"
	fi
done

if test "${ov_error}" = "n"; then
	echo "[RK35] Error applying DT overlays, restoring original DT"
	load ${devtype} ${devnum} ${fdt_addr_r} ${fdtfile}
fi

kaslrseed
echo "[RK35] Booting with ${bootargs}..."
booti ${kernel_addr_r} - ${fdt_addr_r}

